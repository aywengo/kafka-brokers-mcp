{
  "mcpServers": {
    "kafka-brokers": {
      "command": "python",
      "args": [
        "/path/to/kafka-brokers-mcp/kafka_brokers_unified_mcp.py"
      ],
      "env": {
        "KAFKA_BOOTSTRAP_SERVERS": "localhost:9092",
